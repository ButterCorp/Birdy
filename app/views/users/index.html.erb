  <div class="sh-section__item col-lg-3">
    <% @users.each do |user| %>
      <!-- {% if user.is_authenticated %} -->
      <div class="sh-section">
        <div class="sh-section__head">
          <table>
            <tr class="sh-suggest">
              <td>
                <a href="{% url 'profile' user_all.id %}" class="sh-section__avatar2 sh-avatar">
