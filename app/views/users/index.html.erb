  <div class="sh-section__item col-lg-6">
    <% @user.posts.each do |post| %>
      <% if @user.posts.nil? %>
        Pas encore de post :(
      <% end %>
      <div class="sh-section">
        <div class="sh-section__head">
          <a href="/profile/1" class="sh-section__avatar sh-avatar">
            <img src="https://semantic-ui.com/images/avatar/large/joe.jpg" class="img-circle">
          </a>
          <div>
            <%= link_to post.user.username, post.user, class:'sh-section__name' %>
            <span class="sh-section__passed"><%= post.created_at %></span>
          </div>
        </div>
        <div class="sh-section__content">
          <p><%= post.description %></p>
          <!--<div class="sh-section__image">
              <a href="single_post.html">
                  <img src="{% static 'images/microphone-1209816_1920.jpg'%}" alt="">
              </a>
          </div>-->
          <% if current_user %>
            <% if post.user_id == current_user.id %>

              <p> <%= link_to 'Supprimer', post, method: :delete,
                              data: {
                                  confirm: 'Êtes-vous sûr(e) de vouloir ce message ?'
                              },
                              class: 'btn btn-danger' %></p>

            <% end %>
          <% end %>
