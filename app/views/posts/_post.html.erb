<li id="micropost-<%= post.id %>" class="list-unstyled mt-4">
  <div class="card">
    <div class="card-header">
      <%= link_to gravatar_for(post.user), post.user %>
      <span class="user">Auteur : <%= link_to post.user.username, post.user %></span>
      <% if is_current_user?(post.user) %>
        <%= link_to "Supprimer", post, method: :delete, class: 'btn btn-outline-danger offset-md-5', data: {confirm: "Etes-vous sÃ»rs?"} %>
      <% end %>
    </div>
    <div class="card-body">
      <div class="col-md-8">
        <%= image_tag post.picture.url, class: 'img-fluid' if post.picture? %>
      </div>
      <blockquote class="blockquote mb-0">
        <p><%= post.content %></p>
        <footer class="blockquote-footer"><%= time_ago_in_words(post.created_at) %>  <cite title="Source Title">ago.</cite></footer>
      </blockquote>
    </div>
  </div>
</li>