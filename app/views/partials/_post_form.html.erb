<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'partials/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Faites le buzz..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/png,image/jpeg,image/gif' %>
  </span>
<% end %>

<script type="text/javascript">
  $('#post_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 3) {
      alert('Limite de 3MB atteinte.');
    }
  });
</script>